<h1><%= title %></h1>

<form method='POST' action=''>
  <div class="form-group">
    <label for="category-name">Name:</label>
    <input class="form-control" id="category-name" name="name" value='<%= locals.category ? category.name : "" %>'>
  </div>
  <div class="form-group">
    <label for="category-description">Description:</label>
    <input class="form-control" id="category-description" name="description" value='<%= locals.category ? category.description : "" %>'>
  </div>
  <button>Submit</button>
  <% if (locals.category && category._id) { %>
  <a href='<%= category.getUrl() %>' style='margin-left:10px'>Go back</a>
  <% } %>
</form>

<% if(locals.errors) { %>
<ul class='form-errorWrapper'>
  <% errors.forEach(err =>  { %>
  <li class='form-error'><%= err.msg %></li>
  <% }) %>
</ul>
<% } %>